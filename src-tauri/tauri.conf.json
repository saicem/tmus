{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsi"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Tmus",
  "mainBinaryName": "Tmus",
  "version": "0.1.0",
  "identifier": "io.github.saicem.tmus",
  "plugins": {},
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Tmus",
        "width": 1200,
        "height": 680,
        "decorations": false,
        "useHttpsScheme": true,
        "create": false
      }
    ]
  }
}