{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tmus",
  "mainBinaryName": "Tmus",
  "version": "0.3.0",
  "identifier": "io.github.saicem.tmus",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsi"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFRjdCRjk2N0JGQkY3QjEKUldTeDkvdDdsci8zemdmdHRWLzZjTGZnZnV1bW44K1VPTFpoYVJLSWpHMzZTNUtQVG5PTFMxSGcK",
      "endpoints": [
        "https://github.com/saicem/tmus/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Tmus",
        "width": 1200,
        "height": 680,
        "minHeight": 480,
        "minWidth": 860,
        "decorations": false,
        "useHttpsScheme": true,
        "create": false
      }
    ]
  }
}